<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Coffee Finder</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    @using Microsoft.AspNet.Identity
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Coffee Finder</a>

            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav">
                    @*<li class="active"><a href="Index">Home</a></li>*@
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Special Links <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Link</a></li>
                            <li><a href="#">Another Link</a></li>
                            <li><a href="#">And Another One</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="#">Ok, I get it!</a></li>
                        </ul>
                        @*</li>*@

                    <li class="active">@Html.ActionLink("Coffee Shop", "Index", "CoffeeShop") </li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="active">@Html.ActionLink("Rate a Coffee Shop", "Index", "Rate")</li>
                    }
                    <li class="active">@Html.ActionLink("Menu", "Index", "Menu")</li>
                    <li class="active">@Html.ActionLink("Find a Coffee Shop", "Index", "Home/About")</li>



                    @if (Request.IsAuthenticated)
                    {
                        using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                        {
                            @Html.AntiForgeryToken()

                            <ul class="nav navbar-nav navbar-right">
                                <li>
                                    @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                                </li>
                                <li><a href="javascript:document.getElementById('logoutForm').submit()">Sign Out</a></li>
                            </ul>
                        }

                    }

                    else
                    {
                        <ul class="nav navbar-nav navbar-right">
                            <li>@Html.ActionLink(" SignUp", "Register", "Account", routeValues: new { id = "registerLink" }, htmlAttributes: new { @class = "   glyphicon glyphicon-user" })</li>
                            <li>@Html.ActionLink(" Login", "Login", "Account", routeValues: new { id = "loginLink" }, htmlAttributes: new { @class = "   glyphicon glyphicon-log-in" })</li>
                        </ul>
                    }

            </div>
        </div>
    </nav>

    
